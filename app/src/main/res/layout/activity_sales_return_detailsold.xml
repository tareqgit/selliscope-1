<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="deliveryDetails"
            type="com.humaclab.selliscope.model.ModelSalesReturnOld.DeliveryResponseOld.DeliveryList"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.humaclab.selliscope.activity.ActivitySalesReturnOld.SalesReturnActivityOld">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_outlet_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text='@{deliveryDetails.outletName}'
                        android:textColor="#000"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text='@{"Order id: " + deliveryDetails.deliveryId}'
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:textSize="18sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text='@{"Order Date: " + deliveryDetails.deliveryDate}'
                    android:textSize="17sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="#ddd"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Items"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="O.Qty."
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="D.Qty."
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="R.Qty."
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Cause"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Return"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Disc."
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin=".5dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="10dp"
                    android:text="Total"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold" />-->
            </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/srl_delivery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_delivery_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</layout>