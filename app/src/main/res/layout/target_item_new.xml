<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv_target_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp"
    app:cardCornerRadius="@dimen/radius_3"
    app:cardElevation="@dimen/elevation_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">


        <ImageView
            android:id="@+id/icon_target"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:src="@drawable/ic_target_sales"/>

        <TextView
            android:id="@+id/tv_slab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_target"
            android:text="@string/sales_target"
            android:fontFamily="@font/latoregular"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/completed"
            android:fontFamily="@font/latoregular"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_target_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_completed"
            android:layout_alignParentStart="true"
            android:text="0.0"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/circle_progress_view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0.0"
            android:fontFamily="@font/latoregular"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.eralp.circleprogressview.CircleProgressView
            android:id="@+id/circle_progress_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:cpv_background_circle_color="@color/red"
            app:cpv_circle_color="@color/colorPrimary"
            app:cpv_text_color="@color/colorPrimary"

            android:fontFamily="@font/latoregular"
            app:cpv_text_size="17" />

        <TextView
            android:id="@+id/tv_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_completed"
            android:text="@string/remaining"
            android:fontFamily="@font/latoregular"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_target_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_completed"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/latoregular"
            android:text="0.0"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!--<TextView
            android:id="@+id/tv_Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="@color/red"
            android:fontFamily="@font/latoregular"/>-->
    </RelativeLayout>


</android.support.v7.widget.CardView>