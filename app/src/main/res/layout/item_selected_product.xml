<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="selectedProduct"
            type="com.humaclab.selliscope.helper.SelectedProductHelper" />
    </data>
    <LinearLayout
        android:background="@drawable/cart_button_shape"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="9"
                android:hint="Product Name"
                android:fontFamily="@font/latobold"
                android:textStyle="bold"
                android:padding="5dp"
                android:text='@{selectedProduct.productName}'
                android:textAlignment="center"
                android:textColor="#000" />

                <ImageView
                    android:id="@+id/btn_remove"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:textAlignment="center"
                    android:tint="#d50000"
                    app:srcCompat="@drawable/remove" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="2"

                    android:hint="Price"
                    android:fontFamily="@font/latoregular"
                    android:padding="5dp"
                    android:text='@{selectedProduct.productPrice}'
                    android:textAlignment="center"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight=".2"
                    android:text="x"
                    android:fontFamily="@font/latoregular"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/et_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"

                    android:hint="Qty."
                    android:fontFamily="@font/latoregular"
                    android:padding="5dp"
                    android:text='@{selectedProduct.productQuantity}'
                    android:textAlignment="center"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight=".2"
                    android:text="="
                    android:fontFamily="@font/latobold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:hint="Amount"
                    android:fontFamily="@font/latobold"
                    android:padding="5dp"
                    android:text='@{selectedProduct.totalPrice}'
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="3.2"
                    android:text="Promotional Discount"
                    android:fontFamily="@font/latobold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight=".2"
                    android:text="="
                    android:fontFamily="@font/latobold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_promotiondiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:hint="Amount"
                    android:fontFamily="@font/latobold"
                    android:padding="5dp"
                    android:text='@{selectedProduct.tpDiscount}'
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="3.2"
                    android:text="Total"
                    android:fontFamily="@font/latobold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight=".2"
                    android:text="="
                    android:fontFamily="@font/latobold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_finaltotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:hint="Amount"
                    android:fontFamily="@font/latobold"
                    android:padding="5dp"
                    android:text='@{Double.toString(Double.parseDouble(selectedProduct.totalPrice) - Double.parseDouble(selectedProduct.tpDiscount))}'
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000" />
            </TableRow>
        </LinearLayout>

    </LinearLayout>



</layout>