        <activity android:name="com.humaclab.selliscope_2fa.activity.AddOutletActivity"/>
        <activity android:name="com.humaclab.selliscope_2fa.activity.OutletDetailsActivity"/>
        <activity android:name="com.humaclab.selliscope_2fa.activity.PrivacyPolicyActivity"/>
        <activity android:name="com.humaclab.selliscope_2fa.activity.ProductActivity"/>
        <activity
            android:name="com.humaclab.selliscope_2fa.activity.OrderActivity"
            android:screenOrientation="landscape"/>
