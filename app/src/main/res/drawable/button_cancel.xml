<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/button_shape_radius"
                android:bottomRightRadius="@dimen/button_shape_radius"
                android:topLeftRadius="@dimen/button_shape_radius"
                android:topRightRadius="@dimen/button_shape_radius"/>
            <solid android:color="@color/red" />
            <stroke android:width="1dp" android:color="@color/red" />
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/button_shape_radius"
                android:bottomRightRadius="@dimen/button_shape_radius"
                android:topLeftRadius="@dimen/button_shape_radius"
                android:topRightRadius="@dimen/button_shape_radius"/>
            <solid android:color="@color/colorPrimary" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>
</selector>