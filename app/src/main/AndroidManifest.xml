                <action android:name=".Service.SendLocationDataService" />
                <action android:name="android.content.SyncAdapter" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.humaclab.selliscope_mohammadi.receiver.InternetConnectivityChangeReceiver"
            android:enabled="true">
            <intent-filter>
