<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humaclab.selliscope">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".SelliscopeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RouteActivity" />
        <activity android:name=".OutletActivity" />
        <activity android:name=".AddOutletActivity" />
        <activity android:name=".OutletDetailsActivity" />

        <service
            android:name=".UserTrackingService"
            android:exported="false" />
        <service
            android:name=".SendLocationDataService"
            android:exported="false" />

        <activity android:name=".PrivacyPolicyActivity"></activity>
    </application>

</manifest>