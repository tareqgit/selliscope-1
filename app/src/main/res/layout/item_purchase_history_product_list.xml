<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

       <!-- <variable
            name="purchasedProduct"
            type="com.humaclab.selliscope.model.purchase_history.OrderDetailsItem" />
 -->   </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewReturn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/product_name"
                    android:textColor="#000"
                    android:textStyle="bold" />
<!--    android:text='@{purchasedProduct.productName}'
                -->
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:hint="@string/product_name"
                    android:padding="10dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_sku_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/sku_no"
                    android:textColor="#000"
                    android:textStyle="bold" />
                <!--    android:text='@{purchasedProduct.productName}'
                                -->
                <TextView
                    android:id="@+id/tv_sku_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:hint="0"
                    android:padding="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/quantity"
                    android:textColor="#000" />
<!--     android:text='@{String.valueOf(purchasedProduct.productQty)}'
                -->
                <TextView
                    android:id="@+id/tv_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/quantity"
                    android:padding="10dp"
                  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/rate"
                    android:textColor="#000" />
<!--   android:text='@{purchasedProduct.productRate}'
                 -->
                <TextView
                    android:id="@+id/tv_product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/rate"
                    android:padding="10dp"
                  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

                <TextView
                    android:id="@+id/tv_dis_or_cause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/discount"
                    android:textColor="#000" />
<!--    android:text='@{purchasedProduct.productDiscount}'
                -->
                <TextView
                    android:id="@+id/tv_product_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latoregular"
                    android:hint="@string/discount"
                    android:padding="10dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/price"
                    android:textColor="#000" />
<!--        android:text='@{purchasedProduct.productPrice}'
           -->
                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:hint="@string/price"
                    android:padding="10dp"
                   />
            </LinearLayout>


            <TextView
                android:id="@+id/textViewReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/moss_gradient3"
                android:padding="2dp"
                android:paddingStart="8dp"
                android:paddingEnd="24dp"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Return"
                android:textColor="@color/light_font"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>