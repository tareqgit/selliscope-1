<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/product_name"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_name"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/product_name"
                android:fontFamily="@font/latoregular"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/price"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_price"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price"
                android:fontFamily="@font/latoregular"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/stock"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_stock"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/stock"
                android:fontFamily="@font/latoregular"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/quantity"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_product_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quantity"
                android:fontFamily="@font/latoregular"
                android:gravity="end"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/total_price"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_price"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_price"
                android:fontFamily="@font/latoregular"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/offer"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_discount_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/offer"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/tv_discount"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:fontFamily="@font/latobold"
                android:padding="10dp"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/grand_total"
                android:fontFamily="@font/latobold"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_grand_total"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_price"
                android:fontFamily="@font/latoregular"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:drawableRight="@drawable/ic_if_circle_cross"
                android:backgroundTint="#e53935"
                android:text="@string/cancel"
                android:fontFamily="@font/latobold"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_select_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="@string/select"
                android:drawableRight="@drawable/ic_if_circle_check"
                android:fontFamily="@font/latobold"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</layout>