<?xml version="1.0" encoding="utf-8"?>


<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefresher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="10dp"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.sokrio.sokrio_classic.activity.AddOutletActivity"
            tools:showIn="@layout/activity_add_outlet">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/moss_profile_back"
                    android:elevation="3dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_camera"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="100dp"
                    tools:layout_conversion_absoluteWidth="100dp" />


                <EditText
                    android:id="@+id/et_outlet_name"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/ic_if_outlet_name"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Outlet Name"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_outlet"
                    tools:layout_conversion_absoluteHeight="46dp"
                    tools:layout_conversion_absoluteWidth="110dp" />


                <EditText
                    android:id="@+id/et_outlet_owner_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/ic_if_name"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Owner Name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_outlet_name"
                    tools:layout_conversion_absoluteHeight="46dp"
                    tools:layout_conversion_absoluteWidth="113dp" />

                <EditText
                    android:id="@+id/et_outlet_contact_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"

                    android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Contact Number"
                    android:inputType="phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_outlet_owner_name"
                    tools:layout_conversion_absoluteHeight="46dp"
                    tools:layout_conversion_absoluteWidth="139dp" />


                <EditText
                    android:id="@+id/et_outlet_ref_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Refference Number"
                    android:inputType="phone"
                    app:layout_constraintEnd_toStartOf="@+id/btn_getContact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_outlet_contact_number"
                    tools:layout_conversion_absoluteHeight="46dp"
                    tools:layout_conversion_absoluteWidth="163dp" />

                <EditText
                    android:id="@+id/et_outlet_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/ic_my_location_black_24dp"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Outlet Address"
                    android:inputType="text"
                    app:layout_constraintEnd_toStartOf="@+id/btn_get_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_outlet_ref_number"
                    tools:layout_conversion_absoluteHeight="46dp"
                    tools:layout_conversion_absoluteWidth="127dp" />


                <ImageView
                    android:id="@+id/btn_get_location"
                    android:layout_width="48dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"

                    android:padding="8dp"

                    android:src="@drawable/ic_add_location_black_24dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/et_outlet_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_outlet_address"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_outlet_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/latobold"
                    android:padding="4dp"
                    android:text="Outlet Type:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_outlet_address"
                    tools:layout_conversion_absoluteHeight="33dp"
                    tools:layout_conversion_absoluteWidth="109dp" />

                <Spinner
                    android:id="@+id/sp_outlet_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_outlet_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_outlet_type"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="48dp" />


                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/latobold"
                    android:padding="4dp"
                    android:text="District:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_outlet_type"
                    tools:layout_conversion_absoluteHeight="33dp"
                    tools:layout_conversion_absoluteWidth="74dp" />

                <Spinner
                    android:id="@+id/sp_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_district"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_district"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="48dp" />


                <TextView
                    android:id="@+id/tv_thana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/latobold"
                    android:padding="4dp"
                    android:text="Thana:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_district"
                    tools:layout_conversion_absoluteHeight="33dp"
                    tools:layout_conversion_absoluteWidth="63dp" />

                <Spinner
                    android:id="@+id/sp_thana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_thana"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_thana"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_conversion_absoluteWidth="48dp" />


                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:drawableRight="@drawable/ic_if_circle_cross"
                    android:elevation="5dp"
                    android:fontFamily="@font/latobold"
                    android:text="Cancel "
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thana"
                    app:layout_constraintVertical_bias="0.627"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="106dp" />

                <Button
                    android:id="@+id/btn_add_outlet"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:drawableRight="@drawable/ic_if_circle_check"
                    android:elevation="5dp"
                    android:fontFamily="@font/latobold"
                    android:text="Add "
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_cancel"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="88dp" />

                <ImageView
                    android:id="@+id/btn_getContact"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_outlet_ref_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_outlet_ref_number"
                    app:srcCompat="@drawable/ic_person_add_black_24dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
