<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="payments"
            type="com.humaclab.selliscope_mohammadi.model.Payment.OrderList"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:focusableInTouchMode="false"
        app:cardCornerRadius="10dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_outlet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@{payments.outletName}"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text='@{"Order ID#" + Integer.toString(payments.orderId)}'/>

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text='@{"Date: " + payments.orderDate}'/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Sub Total: "
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tv_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text="@{payments.amount}"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Discount: "
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text="@{payments.discount}"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Truck Fare:"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tv_truck_fare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text="@{String.valueOf(payments.truckFare)}"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text="Grand Total: "
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="10dp"
                        android:text='@{Double.toString((Double.parseDouble(payments.amount.replace(",","")) - Double.parseDouble(payments.discount.replace(",",""))) + Double.parseDouble(String.valueOf(payments.truckFare)))}'/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Pay"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:padding="15dp"/>

                <Spinner
                    android:id="@+id/sp_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/paymentType"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_deposited_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deposited Bank"/>

                <EditText
                    android:id="@+id/et_deposited_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deposited Account"/>

                <EditText
                    android:id="@+id/et_deposit_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deposit Form"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_pay"
                style="@android:style/Widget.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pay Now"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>