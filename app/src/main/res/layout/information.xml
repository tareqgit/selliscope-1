<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/pink_out_line_dialogue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/app_name"
            android:fontFamily="@font/latobold"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="3dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_details_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dp"
        android:text="A new version is available on Playstroe. Please Update"
        android:fontFamily="@font/latobold"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="7dp"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text="Update "
        android:fontFamily="@font/latoregular"
        android:drawableRight="@drawable/ic_if_circle_check"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>


</LinearLayout>