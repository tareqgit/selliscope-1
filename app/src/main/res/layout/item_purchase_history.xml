<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="purchaseHistory"
            type="com.humaclab.selliscope.model.purchase_history.PurchaseHistoryItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/order_id"
                    android:fontFamily="@font/latobold"
                    android:padding="10dp"
                    android:text="@string/order_id"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/order_id"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.orderId}'
                    android:fontFamily="@font/latoregular"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:hint="@string/order_date"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.orderDate}'
                    android:fontFamily="@font/latobold"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".90"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:hint="@string/paid"
                        android:fontFamily="@font/latobold"
                        android:padding="2dp"
                        android:text="@string/paid"
                   />

                    <TextView
                        android:id="@+id/tv_paid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="3"
                        android:hint="@string/paid"
                        android:padding="2dp"
                        android:text='@{purchaseHistory.paid}'
                        android:fontFamily="@font/latoregular"
                        android:textAlignment="textEnd"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".90"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="1"
                        android:hint="@string/due"
                        android:padding="2dp"
                        android:text="@string/discount"
                        android:fontFamily="@font/latobold"/>

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="3"
                        android:hint="100"
                        android:fontFamily="@font/latoregular"
                        android:padding="2dp"
                        android:text='@{purchaseHistory.discount}'
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".90"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="1"
                        android:hint="@string/due"
                        android:fontFamily="@font/latobold"
                        android:padding="2dp"
                        android:text="@string/due" />

                    <TextView
                        android:id="@+id/tv_due"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_weight="3"
                        android:hint="@string/due"
                        android:fontFamily="@font/latoregular"
                        android:padding="2dp"
                        android:text='@{purchaseHistory.due}'
                        android:textAlignment="textEnd" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>