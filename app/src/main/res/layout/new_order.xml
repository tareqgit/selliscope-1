<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <Spinner
                    android:id="@+id/sp_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:clickable="true"

                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toStartOf="@+id/btn_remove"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"

                    android:text="-"
                    android:textColor="#E91E63"
                    android:background="@drawable/button_back"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_product" />

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"

                    android:focusableInTouchMode="true"
                    android:hint="Qty."
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_decrease"
                    app:layout_constraintStart_toEndOf="@+id/btn_decrease"
                    app:layout_constraintTop_toTopOf="@+id/btn_decrease" />

                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"

                    android:text="+"

                    android:background="@drawable/button_back"
                    android:textColor="#E91E63"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_qty"
                    app:layout_constraintStart_toEndOf="@+id/et_qty"
                    app:layout_constraintTop_toTopOf="@+id/et_qty" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <EditText
                    android:id="@+id/et_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="-2"
                    android:hint="Discount"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/margin_10"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_10"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_decrease" />

                <ImageView
                    android:id="@+id/btn_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="#fff"
                    android:gravity="center"

                    android:textAlignment="center"
                    android:tint="#d50000"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/remove" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="x"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_increase"
                    app:layout_constraintEnd_toStartOf="@+id/tv_price"
                    app:layout_constraintStart_toEndOf="@+id/btn_increase"
                    app:layout_constraintTop_toTopOf="@+id/btn_increase" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Promotional Discount ="
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Total ="
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
                    app:layout_constraintEnd_toStartOf="@+id/tv_amount"
                    app:layout_constraintTop_toTopOf="@+id/tv_amount" />

                <!--
            <TextView
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:drawableLeft="@drawable/remove"
                android:drawableTint="#d50000"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:textAlignment="center" />-->
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


    </TableRow>
</layout>