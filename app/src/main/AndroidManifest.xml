        <!--Services and Receivers-->
        <receiver
            android:name=".Receiver.StartBootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Service.FcmInstanceIdServices"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Service.FcmGetLocationService"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".Service.UserTrackingService"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name=".Service.UserTrackingService" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>
        <service
            android:name=".Service.SendLocationDataService"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name=".Service.SendLocationDataService" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>
        <!--Services and Receivers-->

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".RouteActivity" />
        <activity android:name=".OutletActivity" />
        <activity android:name=".AddOutletActivity" />
        <activity android:name=".OutletDetailsActivity" />
        <activity android:name=".PrivacyPolicyActivity" />
        <activity android:name=".ProductActivity" />
        <activity
            android:name=".OrderActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".DeliveryListActivity" />
        <activity
            android:name=".DeliveryDetailsActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".DueActivity" />
        <activity android:name=".EditOutletActivity" />
        <activity android:name=".CallCardActivity" />
        <activity android:name=".InspectionActivity" />
        <activity android:name=".SellsReturnActivity" />
        <activity
            android:name=".SellsReturnDetailsActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>