<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cv_outlet_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardCornerRadius="@dimen/radius_3"
                                    app:cardElevation="@dimen/elevation_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_outlet"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_outlet_bnw"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_outlet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Outlet Name"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_outlet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Address"/>

                <TextView
                    android:id="@+id/tv_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Owner: "/>

                <TextView
                    android:id="@+id/tv_outlet_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Mobile: "/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_check_in"
                style="@android:style/Widget.Button.Small"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:background="@drawable/button_shape"
                android:text="Check In"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/pb_check_in"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_order"
                style="@android:style/Widget.Button.Small"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:background="@drawable/button_shape"
                android:text="Order"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>