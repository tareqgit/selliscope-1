            </intent-filter>
        </service>
        <service android:name="com.humaclab.selliscope_mohammadi.service.FcmGetNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.humaclab.selliscope_mohammadi.service.SendLocationDataService"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:process=":selliscope_process">
