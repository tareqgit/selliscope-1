<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="sellsReturnHistory"
            type="com.humaclab.akij_selliscope.model.SalesReturn.SalesReturnHistory.Result"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="#000000"
                    android:text="@{sellsReturnHistory.returnDate}"
                    android:fontFamily="@font/latoregular"
                    android:hint="Date"/>
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@{sellsReturnHistory.outlet}"
                    android:layout_weight="1"
                    android:fontFamily="@font/latoregular"
                    android:hint="Name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:textColor="#000000"
                    android:text="@{String.valueOf(sellsReturnHistory.qty)}"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:hint="Qty"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{sellsReturnHistory.stage}"
                    android:fontFamily="@font/latoregular"
                    android:textColor="#000000"
                    android:hint="Status"/>

            </LinearLayout>



            </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>