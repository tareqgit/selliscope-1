<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="purchaseHistory"
            type="com.humaclab.selliscope.model.PurchaseHistory.PurchaseHistoryItem" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Order ID"
                    android:padding="10dp"
                    android:text="Order ID:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Order ID"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.orderId}'
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:hint="Order Date"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.orderDate}'
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:hint="Paid"
                    android:padding="10dp"
                    android:text="Paid"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_paid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:hint="Paid"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.paid}'
                    android:textColor="#000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="1.25"
                    android:hint="Due"
                    android:padding="10dp"
                    android:text="Discount:"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="1"
                    android:hint="100"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.discount}'
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="0.75"
                    android:hint="Due"
                    android:padding="10dp"
                    android:text="Due:"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tv_due"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_weight="1"
                    android:hint="Due"
                    android:padding="10dp"
                    android:text='@{purchaseHistory.due}'
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>