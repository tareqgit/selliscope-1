        <!--Services and Receivers-->
        <service
            android:name="com.humaclab.selliscope_2fa.service.FcmInstanceIdServices">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="com.humaclab.selliscope_2fa.service.FcmGetNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="com.humaclab.selliscope_2fa.service.SendLocationDataService"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:process=":selliscope_process">
            <intent-filter>
                <action android:name=".Service.SendLocationDataService"/>
                <action android:name="android.content.SyncAdapter"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </service>

        <receiver
            android:name="com.humaclab.selliscope_2fa.receiver.InternetConnectivityChangeReceiver"
            android:enabled="true">
            <intent-filter>
                <action
                    android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife"/>
            </intent-filter>
        </receiver>
        <!--Services and Receivers-->

        <activity
            android:name="com.humaclab.selliscope_2fa.activity.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.humaclab.selliscope_2fa.activity.LoginActivity"/>
        <activity
