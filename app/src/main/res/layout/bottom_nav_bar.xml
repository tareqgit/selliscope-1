<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/navigation_target"
        style="@style/BottomBarItemVertical"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/navigation_bar_height_vertical"
        android:layout_weight="1.0"
        android:drawableTop="@drawable/target"
        android:text="@string/target_navigation_item" />

    <TextView
        android:id="@+id/navigation_dashboard"
        style="@style/BottomBarItemVertical"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/navigation_bar_height_vertical"
        android:layout_weight="1.0"
        android:drawableTop="@drawable/ic_dashboard_white_24dp"
        android:text="@string/dashboard_navigation_item" />

</LinearLayout>